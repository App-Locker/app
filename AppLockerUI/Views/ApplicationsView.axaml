<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:appLockerUi="clr-namespace:AppLockerUI.Views"
             xmlns:appLockerUi1="clr-namespace:AppLockerUI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AppLockerUI.Views.ApplicationsView"
             x:DataType="appLockerUi:ApplicationViewModel">
    <UserControl.Resources>
        <appLockerUi1:NullToBoolConverter x:Key="NullToBoolConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="0" Margin="0">
            <Button Command="{Binding RemoveCommand}" IsVisible="{Binding SelectedItem, Converter={StaticResource NullToBoolConverter}}" 
                    Width="30" Height="30" Background="Transparent" FontWeight="Bold" Margin="0,0,5,0">
                <Image Source="{SvgImage avares://AppLockerUI/Assets/minus.svg}" Stretch="Uniform" />
            </Button>
            <Button Command="{Binding RemoveCommand}" IsVisible="{Binding SelectedItem, Converter={StaticResource NullToBoolConverter}}" 
                    Width="30" Height="30" Background="Transparent" FontWeight="Bold" Margin="0,0,5,0">
                <Image Source="{SvgImage avares://AppLockerUI/Assets/settingsSlide.svg}" Stretch="Uniform" />
            </Button>
            <Button Command="{Binding AddCommand}" Width="30" Height="30" Background="Transparent" FontWeight="Bold">
                <Image Source="{SvgImage avares://AppLockerUI/Assets/plus.svg}" Stretch="Uniform" />
            </Button>
        </StackPanel>

      
        <ScrollViewer Grid.Row="1">
            <ListBox ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <Image Source="{Binding Image}" Width="100" Height="100"/>
                            <TextBlock Text="{Binding Text}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.Styles>
                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                        <Setter Property="Background" Value="#3b3a3a"/>	
                    </Style>
                </ListBox.Styles>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
